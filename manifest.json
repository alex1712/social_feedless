{
    "manifest_version": 3,
    "name": "Social Feedless",
    "version": "1.0",
    "description": "Removes the news feed from popular social networks to help you focus.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.linkedin.com/*",
        "*://*.instagram.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}